# User/Group IDs
PUID=1000
PGID=1000

# Timezone
TZ=Asia/Kolkata

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_THIS_IMMICH_DB_PASSWORD
DB_DATABASE_NAME=immich

# Immich Configuration
# This is where your photos and videos will be stored
# Update this path to your desired location
UPLOAD_LOCATION=/path/to/immich/upload

# Public URL (update with your actual domain or IP)
# This will be used for sharing links and external access
IMMICH_SERVER_URL=http://YOUR_SERVER_IP:2283

# Optional: Machine Learning Settings
# Set to false to disable ML features (face detection, object recognition)
IMMICH_MACHINE_LEARNING_ENABLED=true

# Optional: External Library
# Add paths to existing photo libraries you want to import without copying
# Example: /storage/photos:/external/photos
# IMMICH_EXTERNAL_PATH=/path/to/existing/photos

# Redis Configuration (no password needed for local deployment)
REDIS_HOSTNAME=immich-redis
