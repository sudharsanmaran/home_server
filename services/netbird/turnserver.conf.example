# Coturn TURN server configuration

# Listening port for TURN/STUN
listening-port=3478

# Relay ports range for TURN
min-port=49152
max-port=65535

# Verbose logging (set to 0 for production)
verbose

# Fingerprint
fingerprint

# Long-term credential mechanism
lt-cred-mech

# TURN server domain
realm=yourname.duckdns.org

# User credentials (must match .env)
user=netbird:change_this_strong_password

# External IP (your public IP or DuckDNS domain)
# Will be auto-detected if not set
# external-ip=YOUR_PUBLIC_IP

# Disable TLS (using NPM for SSL termination)
no-tls
no-dtls

# Performance tuning
no-multicast-peers
no-cli
